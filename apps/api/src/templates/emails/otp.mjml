<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Arial, sans-serif" />
      <mj-button
        background-color="#1a73e8"
        color="#ffffff"
        font-size="16px"
        padding="15px 25px"
        border-radius="5px"
      />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f4f4f4">
    <mj-section padding="20px 0">
      <mj-column>
        <mj-image
          width="120px"
          src="data:image/svg+xml;base64,"
          alt="Logo"
        />
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" padding="20px" border-radius="8px">
      <mj-column>
        <mj-text
          font-size="20px"
          font-weight="bold"
          color="#333333"
          align="center"
        >
          Your OTP Code
        </mj-text>
        <mj-text font-size="16px" color="#555555" align="center">
          Use the following OTP to complete your verification. It will expire in
          10 minutes.
        </mj-text>
        <mj-text
          font-size="28px"
          font-weight="bold"
          color="#1a73e8"
          align="center"
          padding="20px 0"
        >
          {{OTP_CODE}}
        </mj-text>
        <mj-text
          font-size="12px"
          color="#999999"
          align="center"
          padding="20px 0 0 0"
        >
          If you didnâ€™t request this, you can safely ignore this email.
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding="20px 0">
      <mj-column>
        <mj-text font-size="12px" color="#aaaaaa" align="center">
          &copy; {{CURRENT_YEAR}} Expense Tracker. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
